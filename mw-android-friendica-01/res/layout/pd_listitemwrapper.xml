<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout android:padding="5dp" android:background="#dddddd" android:orientation="horizontal"  android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/date" android:paddingRight="15dp" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        
        <Button android:id="@+id/btn_like" android:text="Like" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <Button android:id="@+id/btn_dislike" android:text="DisLike" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <Button android:id="@+id/btn_delete" android:text="Delete" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        
    </LinearLayout>
    
    
</LinearLayout>